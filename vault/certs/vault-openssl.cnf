[ req ]
default_bits = 2048
prompt = no
default_md = sha256
distinguished_name = dn
req_extensions = req_ext
x509_extensions = v3_ca   # Add v3_ca extension here for x509 certificates

[ dn ]
C = US
ST = California
L = San Francisco
O = MyCompany
OU = MyOrg
CN = localhost

[ req_ext ]
subjectAltName = @alt_names

[ v3_ca ]   # Add this section to define v3_ca extensions
subjectAltName = @alt_names
basicConstraints = CA:FALSE
keyUsage = digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth, clientAuth

[ alt_names ]
DNS.1 = localhost
DNS.2 = vault-server
IP.1 = 127.0.0.1
