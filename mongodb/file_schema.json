{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "id": "fileMetadata",
    "title": "File metadata",
    "description": "Metadata associated with a file",
    "type": "object",
    "properties": {
      "compressed": {
        "type": "boolean"
      },
      "dataType": {
        "type": "string",
        "minLength": 1
      },
      "date": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "format": {
        "type": "string",
        "minLength": 1
      },
      "owner": {
        "type": "string",
        "minLength": 1
      },
      "path": {
        "type": "string",
        "minLength": 1
      },
      "project": {
        "type": "string",
        "minLength": 1
      },
      "size": { 
        "type": "number",
        "minimum": 1
      }
    },
    "required": [
      "compressed",
      "dataType",
      "date",
      "description",
      "format",
      "owner",
      "path",
      "project",
      "size"
    ],
    "additionalProperties": false
  }