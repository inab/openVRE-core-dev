{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "id": "dataType",
  "title": "Data type",
  "description": "A data type allowed in openVRE and its possible extensions (file types)",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "fileTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "required": [
    "name",
    "fileTypes"
  ],
  "additionalProperties": false
}