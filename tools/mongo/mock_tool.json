  "output_files": [
    {
      "name": "results_file",
      "required": true,
      "allow_multiple": true,
      "file": {
        "file_type": "TXT",
        "data_type": "sample_information_file",
        "meta_data": {
          "visible": true,
          "tool": "mock_tool",
          "description": "Demo TXT output file."
        },
        "file_path": "results_file.txt"
      }
    }
  ],
  "external": true,
